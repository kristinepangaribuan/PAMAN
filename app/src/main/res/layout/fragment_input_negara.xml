<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/grad_bg">

    <Button
        android:id="@+id/btnTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group Negara"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        android:background="@drawable/subtitle_bg"
        android:textColor="@color/white"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp"
        android:background="@drawable/form_layout"
        android:paddingTop="5dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5">

        <LinearLayout
            android:id="@+id/linePilihData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="10dp"
                android:text="Group Negara"
                android:textAllCaps="true"
                android:textColor="@color/gradStart"
                android:textSize="15sp" />

            <TextView
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text=":"
                android:textAllCaps="true"
                android:textColor="@color/gradStart"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/pilih_Negara"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:entries="@array/select_negara"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="5dp"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputNegara"
            android:layout_width="match_parent"
            android:layout_below="@id/linePilihData"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="10dp"
                android:text="Group Negara"
                android:textAllCaps="true"
                android:textColor="@color/gradStart"
                android:textSize="15sp" />

            <TextView
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text=":"
                android:textAllCaps="true"
                android:textColor="@color/gradStart"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="15dp"
                android:hint=" "
                android:textColorHint="@color/white"
                android:paddingRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_bg"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnInputHS"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/inputNegara"
            android:layout_marginTop="50dp"
            android:text="Show Data"
            android:textAllCaps="false"
            android:background="@drawable/button_submit"
            android:textColor="@color/gradStart"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"/>


    </RelativeLayout>

</RelativeLayout>